#ifndef FLIGHTCONTROL_H_
#define FLIGHTCONTROL_H_

#define MOTOR1_PIN 11
#define MOTOR2_PIN 10
#define MOTOR3_PIN 8
#define MOTOR3_DIR_PIN 13

class FlightControl {
private:
	void mainLoop();
	int (FlightControl::*ptrToLoop)();

public:
	// Properties
	int epsilon;
	int dt;        //100ms loop time
	int yawMAX;    //For Current Saturation
	int yawMIN;
	int yawKp;
	int yawKd;
	int yawKi;

	// Methods
	void initialize();
	float yawPID(float setpoint, float actual_position);
};

extern FlightControl FlightControl1;
#endif /* FLIGHTCONTROL_H_ */
