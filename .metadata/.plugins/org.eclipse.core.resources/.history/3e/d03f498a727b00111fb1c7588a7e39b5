#ifndef REMOTECMD_H_
#define REMOTECMD_H_

class RemoteCmd {
public:
public:
	uint8_t cmd;
	float value;
	RemoteCmd(uint8_t * buf);
	RemoteCmd(uint8_t cmd, float value);
	void serialize(uint8_t *buf) {
		buf[0] = cmd;
		buf[1] = (value & 0x000000FF);
		buf[2] = (value & 0x0000FF00) >> 8;
		buf[3] = (value & 0x00FF0000) >> 16;
		buf[4] = ()
	}
} remoteCmd;
	RemoteCmd();
	virtual ~RemoteCmd();
};

#endif /* REMOTECMD_H_ */
