#ifndef REMOTECMD_H_
#define REMOTECMD_H_

class RemoteCmd {
public:
public:
	uint8_t cmd;
	float value;
	void decode(uint8_t * buf);
	void decode(uint8_t cmd, float value);
	void serialize(uint8_t *buf);
	RemoteCmd();
	virtual ~RemoteCmd();
};

#endif /* REMOTECMD_H_ */
